<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="clip_horizontal"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/firstHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:text="7.60"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/firstHeading"
        android:text="GB"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/viewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/txtGB"
        android:layout_marginLeft="160dp"
        android:text="view details >"
        android:textSize="18dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewDetails"
        android:layout_marginLeft="150dp"
        android:background="#3445A6"
        android:text="clean up all"
        app:cornerRadius="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/submitBtn"
        android:layout_marginLeft="20dp"
        android:text="Phone Storage"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24dp" />



</RelativeLayout>

